{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/benchmark1",
        "destination": "/benchmarks/bm1/benchmark1.html"
      },
      {
        "source": "/benchmark2",
        "destination": "/benchmarks/bm2/index.html"
      },
      {
        "source": "/benchmark3",
        "destination": "/benchmarks/bm3/index.html"
      }
    ]
  }
}
